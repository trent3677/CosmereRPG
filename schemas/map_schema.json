{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "mapName": {
      "type": "string",
      "description": "The name of the entire map"
    },
    "mapId": {
      "type": "string",
      "description": "Unique identifier for the map"
    },
    "totalRooms": {
      "type": "integer",
      "minimum": 1,
      "description": "The total number of rooms in the map"
    },
    "startRoom": {
      "type": "string",
      "description": "ID of the starting room (optional, defaults to first room)"
    },
    "version": {
      "type": "string",
      "description": "Schema version (optional, for tracking updates)"
    },
    "notes": {
      "type": "string",
      "description": "Additional notes about the map (optional)"
    },
    "rooms": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the room"
          },
          "name": {
            "type": "string",
            "description": "Name of the room"
          },
          "connections": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Array of room IDs that this room is directly connected to"
          },
          "coordinates": {
            "type": "string",
            "description": "Grid coordinates (e.g., 'X0Y1')"
          },
          "type": {
            "type": "string",
            "description": "Type of room (dungeon, tavern, shop, etc.) - optional for backward compatibility"
          },
          "directions": {
            "type": "object",
            "description": "Cardinal directions to connected rooms (optional)",
            "additionalProperties": {
              "type": "string"
            }
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Tags for AI/gameplay (e.g., hub, rest, landmark) - optional"
          },
          "purpose": {
            "type": "string",
            "description": "Room purpose (e.g., safe_haven, quest_goal, encounter) - optional"
          },
          "landmark": {
            "type": "boolean",
            "description": "Whether this room is a landmark - optional"
          },
          "dangerLevel": {
            "type": "string",
            "enum": ["low", "medium", "high", "extreme"],
            "description": "Danger level of the room - optional"
          }
        },
        "required": ["id", "name", "connections", "coordinates"]
      },
      "minItems": 1,
      "description": "Array of room objects in the map"
    },
    "layout": {
      "type": "array",
      "items": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "description": "2D array representing the spatial layout of the rooms"
    }
  },
  "required": ["mapName", "mapId", "totalRooms", "rooms", "layout"]
}